@require './config';

$mobileSidebarWidth = $sidebarWidth * 0.82;

// narrow desktop / iPad
@media (max-width: 1100px) {
  .sidebar {
    font-size: 15px;
    width: 0;
  }

  .page {
    // padding-left $mobileSidebarWidth
    width: 100%;
  }

  .top-backImg {
    width: 100%;
  }

  .top-img-container {
    width: 100%;
  }

  .top-img {
    // width: 100%;
    // height: 270px;
  }

  .article-cover {
    // width: 100%;
    width: 200px;
    max-height: 135px;
  }
}

// wide mobile
@media (max-width: 800px) {
  .sidebar {
    width: 16rem;
    top: 0;
    padding-top: $navbarHeight;
    transform: translateX(-100%);
    transition: transform 0.2s ease;
  }

  .page,.page-doc {
    padding-left: 0;
  }

  .sidebar-right {
    display: none;
  }

  .article-list-inner {
    width: 100%;
    padding-top: 10px;
  }

  .theme-container {
    &.sidebar-open {
      .sidebar {
        transform: translateX(0);
      }
    }

    &.no-navbar {
      .sidebar {
        padding-top: 0;
      }
    }
  }

  .top-img-container {
    width: 100%;
    height: 250px;
  }

  .top-img {
    width: 800px;
    height: 250px;
  }

  .article-cover {
    // width: 100%;
    // height :auto;
  }

  .tag-container {
    .tag-item-container {
      display: block;
    }
  }
}

@media (max-width: 550px) {
  .navbar-container {
    // height: 3.8rem;
  }

  .navbar {
    .site-name {
      font-size: 1.3rem;
    }
  }

  .article-item {
    // padding: 15px 0;
  }

  .article-title {
    margin-bottom: 10px;

    h3 {
      font-size: 1.2rem;
      margin: 0;
    }
  }

  .article-bref {
    margin-bottom: 0;
  }

  .article-cover {
    width: 100px;
    max-height: 80px;
  }

  .article-text {
    // max-height: 80px;
    line-height: 20px;
    font-size: 14px;
  }

  .article-card {
    // display: none;
    position: relative;
    // padding: 0px 0 0;
    font-size: 12px;

    .article-tag {
      font-size: 14px;
      // display: inline-block;
      padding: 0px 6px 1px;
      // border-radius: 5px 5px;
      // background: #7eb6c9;
      // color: #fff;
    }
  }

  .top-img-container {
    width: 100%;
    height: 180px;
  }

  .top-img {
    width: 550px;
    height: 180px;
  }
}

// narrow mobile
@media (max-width: $MQMobileNarrow) {
  h1 {
    font-size: 1.9rem;
  }

  .content__default {
    div[class*='language-'] {
      // margin: 0.85rem -1.5rem;
      border-radius: 0;
    }
  }
}
